<% if (games.length > 0) { %>
<table class="table table-striped table-bordered">
<tr>
<th>ID</th><th>Map</th><th>Turn</th><th>Players</th><th>Link</th>
</tr>
<% for (var i = 0; i < games.length; i++) { %>
<tr class="<%= games[i].finished ? 'finished' : 'active' %>">
<td><%= games[i].id %></td>
<td><%= games[i].brief.map %></td>
<td><%= games[i].brief.turn %></td>
<td><%- games[i].brief.players.map(function(p) {
        var name = p.name;
        if (games[i].brief.winner && games[i].brief.winner.id == p.id)
            name = "<b>" + p.name + "</b>";
        return name + " (" + p.score.toFixed(2) + ")";
    }).join(", ") %></td>
<td>
    <% if (games[i].finished) { %>
    <a href="/<%= games[i].id %>">See Replay</a>
    <% } %>
</td>
</tr>
<% } %>
</table>
<% } else {%>
<p class="alert alert-warning">There is no active game</p>
<% } %>
